@model IEnumerable<CocktailMVC.Models.Cocktail>

@{
    ViewBag.Title = "Index";
}

<h2>Weekly Cocktails</h2>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Theme</th>            
        </tr>
    </thead>
    <tbody>

        @foreach (var coctail in Model)
        {
            <tr>
                <td>@Html.ActionLink(coctail.Name, "Detail", "Cocktail", new { id = coctail.Id }, null)</td>
                <td>@coctail.Price kr</td>
                <td>@coctail.Theme.Name</td>
            </tr>
        }
    </tbody>
</table>

