@model IEnumerable<CocktailMVC.Models.Cocktail>

@{
    ViewBag.Title = "Index";
}

<h2>Weekly Cocktails</h2>
<p>@Html.ActionLink("Add Cocktail", "New", "Cocktail", null, new { @class = "btn btn-primary" })</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Theme</th>
            <th>Description</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var coctail in Model)
        {
            <tr>
                <td>@Html.ActionLink(coctail.Name, "Edit", "Cocktail", new { id = coctail.Id }, null)</td>
                <td>@coctail.Price kr</td>
                <td>@coctail.Theme.Name</td>
                <td>@coctail.Description</td>
                <td>@Html.ActionLink("Delete", "Delete", "Cocktail", new { id = coctail.Id}, new { @class = "btn btn-link"})</td>
            </tr>
        }
    </tbody>
</table>

